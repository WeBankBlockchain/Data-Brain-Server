<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webank.databrain.db.mapper.OrgInfoMapper">

    <resultMap id="idname" type="com.webank.databrain.model.common.IdName">
        <result property="id" column="did"/>
        <result property="name" column="name"/>
    </resultMap>

    <resultMap id="ordDataObject" type="com.webank.databrain.db.entity.OrgInfoDataObject">
        <result property="pkId" column="pk_id"/>
        <result property="orgId" column="org_id"/>
        <result property="certType" column="cert_type"/>
        <result property="certContent" column="cert_content"/>
        <result property="contact" column="contact"/>
        <result property="createTime" column="create_time" javaType="java.time.LocalDateTime"/>
        <result property="updateTime" column="update_time" javaType="java.time.LocalDateTime"/>

    </resultMap>

    <select id="selectHotEnterprises">
        SELECT o.org_id, o.name FROM `org_info` o LIMIT 0, #{topN};
    </select>

    <select id="count">
        SELECT COUNT(1) FROM `org_info`;
    </select>

    <select id="listOrgs" resultMap="ordDataObject">
        SELECT * FROM `org_info` ORDER BY pk_id DESC LIMIT #{startOffset},#{limitSize}
    </select>
</mapper>
